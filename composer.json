{
    "name": "santarosa/mvc",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require": {
        "firebase/php-jwt": "^6.11",
        "lcobucci/jwt": "^5.5",
        "vlucas/phpdotenv": "^5.6",
        "william-costa/database-manager": "^0.1.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o"
        ]
    }
}
